@{
}

@*if user is authenticated will display workers information*@
@if (User.Identity.IsAuthenticated)
{

    <div class="text-center">
        <h4>Hello Worker @Model.FirstName @Model.LastName. You are Logged In</h4>
        <h3>Your Current Jobs:</h3>
        @* will cycle thru jobs in model
        *@
        @foreach (var Job in Model.Jobs)
                    {
            <h5>

            @*displays tile of the job and display status of the job*@
                @Job.Title | This job is @if (Job.Active == true)
                            { <span class="status">active</span> }
                else
                {
                    @*else will dispalyinactiive*@
                    <span class="status">inactive</span> }
            </h5>

        }
        @*if available allow to selct job*@
        @if (Model.Avaliable)
        {
            <h2>Please @Html.ActionLink("select a job", "Index", "Jobs").</h2>
        }
        else
        //else come back with message assigned to a job
        {
            <p>You are already assigned to a job.</p>
        }
    </div>
}